<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
	<form name="invoice-line-form" title="Invoice line"
		model="com.axelor.apps.account.db.InvoiceLine" width="large"
		readonlyIf="$isReadOnly"
		onNew="action-account-invoice-line-onnew-group"
		onLoad="action-group-account-invoice-line-onload"
		id="invoice-line-form-extend" extension="true">
		
		<extend
			target="panel-tabs[@name='mainPanelTab']//panel[@name='informationsPanel']//field[@name='product']">
			<replace>
				<field name="product" canEdit="false" onChange="action-group-account-invoice-line-product-onchange-extended" onSelect="action-invoice-line-attrs-set-product-domain-onselect" form-view="product-form" grid-view="product-grid"/>
			</replace>
		</extend>
		
		<extend
			target="panel-tabs[@name='mainPanelTab']//panel[@name='informationsPanel']//field[@name='qty']">
			<replace>
				<field name="qty" colSpan="3" required="true" onChange="action-group-account-invoice-line-qty-onchange-extend"/>
			</replace>
		</extend>

		<extend
			target="panel-tabs[@name='mainPanelTab']//panel[@name='informationsPanel']//field[@name='price']">
			<replace>	
				<field name="price" colSpan="3" required="true" onChange="action-invoice-line-method-onchange-price,action-invoice-line-method-compute-extended,action-invoice-line-method-compute-analytic-distribution,action-budget-validate-exceed-line-amount"/>
			</replace>
		</extend>
				
		<extend
			target="panel-tabs[@name='mainPanelTab']//panel[@name='informationsPanel']//panel[@name='discountPanel']">
			<replace>
				<panel name="discountPanel" title="Discount" colSpan="12"
					itemSpan="6">
					<panel name="firstDiscountPanel" title="First discount"
						colSpan="12">
						<field name="discountTypeSelect"
							onChange="action-invoice-line-method-compute-extended"
							canEdit="true" />
						<field name="discountAmount"
							onChange="action-invoice-line-method-compute-extended"
							hideIf="discountTypeSelect == 0" x-scale="2" />
					</panel>
					<panel name="secondDiscountPanel" title="Second discount"
						colSpan="12">
						<field name="secDiscountTypeSelect"
							onChange="action-invoice-line-method-compute-extended"
							canEdit="true" />
						<field name="secDiscountAmount"
							onChange="action-invoice-line-method-compute-extended"
							hideIf="secDiscountTypeSelect == 0" x-scale="2" />
					</panel>
				</panel>
			</replace>
		</extend>
	</form>

    <action-group name="action-group-account-invoice-line-product-onchange-extended">
    	<action name="action-invoice-line-method-get-product-information"/>
    	<action name="action-invoice-line-method-compute-extended"/>
    	<action name="action-invoice-line-method-get-and-compute-analytic-distribution"/>
    	<action name="action-budget-validate-exceed-line-amount"/>
    	<action name="action-invoice-line-method-get-fixed-asset-category" if="__config__.app.isApp('account')"/>
    	<action name="action-attrs-account-invoice-line-onnew-onload"/>
    </action-group>

    <action-group name="action-group-account-invoice-line-qty-onchange-extend">
		<action name="action-invoice-line-method-get-discount"/>
		<action name="action-invoice-line-method-compute-extended"/>
		<action name="action-invoice-line-method-compute-analytic-distribution"/>
		<action name="action-budget-validate-exceed-line-amount"/>
	</action-group>

	<action-method name="action-invoice-line-method-get-discount">
		<call class="com.axelor.apps.account.web.InvoiceLineController" method="getDiscount"/>
	</action-method>

	<action-method
		name="action-invoice-line-method-compute-extended">
		<call
			class="bzh.toolapp.apps.remisecascade.web.InvoiceLineController"
			method="compute" />
	</action-method>

	<action-method name="action-invoice-line-method-compute-analytic-distribution">
		<call class="com.axelor.apps.account.web.InvoiceLineController" method="computeAnalyticDistribution"/>
	</action-method>
</object-views>