<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<form name="sale-order-form" title="Sale order"
		model="com.axelor.apps.sale.db.SaleOrder"
		onLoad="action-group-sale-saleorder-onload"
		onNew="action-group-sale-saleorder-onnew" id="sale-order-form-extend"
		extension="true">
		<extend target="panel[@name='salesFollowUpPanel']">
			<insert position="before">
				<panel name="discountPanel" title="Global Discount"
					colSpan="12" hideIf="clientPartner == null" sidebar="true"
					itemSpan="6" canCollapse="true" collapseIf="true">
					<panel name="firstDiscountPanel"
						title="First global discount" colSpan="12">
						<field name="discountTypeSelect"
							onChange="action-sale-order-method-compute-extend" canEdit="true" />
						<field name="discountAmount"
							onChange="action-sale-order-method-compute-extend"
							hideIf="discountTypeSelect == 0" x-scale="2" />
					</panel>
					<panel name="secondDiscountPanel"
						title="Second global discount" colSpan="12">
						<field name="secDiscountTypeSelect"
							onChange="action-sale-order-method-compute-extend" canEdit="true" />
						<field name="secDiscountAmount"
							onChange="action-sale-order-method-compute-extend"
							hideIf="secDiscountTypeSelect == 0" x-scale="2" />
					</panel>
				</panel>
			</insert>
		</extend>
		<!-- just to be able to react on price list change to update global discount 
			amounts -->
		<extend
			target="panel[@name='mainPanel']//panel[@name='generalInfoPanel']//field[@name='priceList']">
			<replace>
				<field name="priceList"
					readonlyIf="saleOrderLineList.length > 0 || statusSelect >= 2"
					onChange="action-group-sale-pricelist-onchange-extended"
					onSelect="action-sale-order-method-price-list-domain"
					canEdit="false" form-view="price-list-form"
					grid-view="price-list-grid" hideIf="company == null" colSpan="3" />
			</replace>
		</extend>
		<extend
			target="panel[@name='mainPanel']//panel[@name='generalInfoPanel']//field[@name='clientPartner']">
			<replace>
				<field name="clientPartner" 
				required="true"  
				hideIf="company == null" 
				readonlyIf="statusSelect > 1" 
				onChange="action-sale-order-group-client-partner-change-extended,action-sale-order-record-compute-end-of-validity-date" 
				onSelect="action-sale-order-method-set-client-partner-domain" 
				form-view="partner-form" 
				grid-view="partner-grid" 
				colSpan="3"/>

			</replace>
		</extend>
	</form>
		
	<action-method
		name="action-sale-order-method-compute-extend">
		<call
			class="bzh.toolapp.apps.remisecascade.web.SaleOrderController"
			method="compute" />
	</action-method>

	<action-method
		name="action-sale-pricelist-method-extended">
		<call
			class="bzh.toolapp.apps.remisecascade.web.SaleOrderController"
			method="propagatePriceListDiscounts" />
	</action-method>

	<action-group
		name="action-group-sale-pricelist-onchange-extended">
		<!-- keep current action -->
		<action name="action-sale-order-record-hide-discount" />
		<!-- add our call to propagate global discounts -->
		<action name="action-sale-pricelist-method-extended" />
	</action-group>
	
	<action-group name="action-sale-order-group-client-partner-change-extended">
		<action name="action-sale-order-record-partner"/>
		<action name="action-sale-order-record-set-advance-payment" if="__config__.app.getApp('supplychain')?.manageAdvancePaymentsFromPaymentConditions"/>
        <action name="action-sale-order-method-address-str"/>
		<action name="action-sale-order-method-fill-price-list-extended" if="!template"/>
		<action name="action-sale-order-attrs-interco"
				if="__config__.app.isApp('supplychain')"/>
		<action name="action-sale-order-record-interco"
				if="__config__.app.isApp('supplychain')"/>
		<action name="action-sale-order-record-set-contact-partner"/>
		<action name="action-sale-order-record-partner-supplychain" 
				if="__config__.app.isApp('supplychain')"/>
		<action name="action-supplychain-sale-order-method-get-stock-location"
				if="__config__.app.isApp('supplychain') &amp;&amp; stockLocation == null"/>
		<action name="action-partner-attrs-hide-contact-partner"/>
		<action name="action-sale-order-method-change-sale-order-line-tax" if="template"/>
		<action name="action-sale-order-method-compute" if="template"/>
		<action name="action-sale-order-attrs-set-is-ispm-required"
				if="__config__.app.isApp('supplychain')"/>
	</action-group>
	
	<action-method name="action-sale-order-method-fill-price-list-extended">
		<call class="bzh.toolapp.apps.remisecascade.web.SaleOrderController" method="fillPriceList"/>
	</action-method>
	
</object-views>